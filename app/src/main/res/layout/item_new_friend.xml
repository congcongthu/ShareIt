<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_new_friend_layout"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="70dp">

    <com.shehuan.niv.NiceImageView
        android:src="@drawable/ic_default_avatar"
        android:id="@+id/new_friend_avatar"
        android:layout_margin="10dp"
        app:corner_radius="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <LinearLayout
        android:id="@+id/name_and_addr"
        android:layout_toRightOf="@+id/new_friend_avatar"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="70dp">
        <TextView
            android:id="@+id/new_friend_name"
            android:text="昵称"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/new_friend_address"
            android:text="address"
            android:paddingLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="70dp">

        <Button
            android:id="@+id/bt_add_new_friend"
            android:background="@drawable/rect_blue"
            android:text="同意"
            android:layout_width="50dp"
            android:layout_height="40dp" />

    </LinearLayout>


</RelativeLayout>
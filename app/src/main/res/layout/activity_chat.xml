<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.v7.widget.Toolbar
        android:id="@+id/chat_toolbar"
        android:background="@color/lightgray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/chat_name_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="chat"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/invite_others"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:padding="15dp"
            android:src="@drawable/ic_add" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ListView
            android:id="@+id/chat_lv"
            android:stackFromBottom="true"
            android:transcriptMode="alwaysScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null">

        </ListView>
    </LinearLayout>


    <LinearLayout
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/chat_bottom"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:gravity="center">

        <EditText
            android:padding="5dp"
            android:layout_margin="5dp"
            android:background="@drawable/rect_search_contact"
            android:id="@+id/chat_text_edt"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"/>


        <com.shehuan.niv.NiceImageView
            android:id="@+id/bt_send_img"
            android:src="@drawable/ic_send_img"
            app:corner_radius="15dp"
            android:layout_width="35dp"
            android:layout_height="35dp" />

        <Button
            android:layout_margin="5dp"
            android:background="@drawable/back_bt_login"
            android:id="@+id/chat_send_text"
            android:textColor="@color/black"
            android:text="发送"
            android:textSize="20sp"
            android:layout_width="70dp"
            android:layout_height="35dp" />

    </LinearLayout>


</LinearLayout>
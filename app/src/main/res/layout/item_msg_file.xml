<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/send_file_left"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.sjtuopennetwork.shareit.util.RoundImageView
            android:src="@drawable/ic_people"
            app:corner_radius="5dp"
            android:id="@+id/send_file_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp">

                <TextView
                    android:id="@+id/send_file_user"
                    android:text="Jack"
                    android:paddingLeft="5dp"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/send_file_time"
                    android:text="10-10 23:20:23"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textSize="13sp"
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_margin="5dp"
                android:background="@drawable/rect_search_contact"
                android:padding="20dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_file_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

                <TextView
                    android:id="@+id/send_file_name"
                    android:layout_margin="5dp"
                    android:text="test_file_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/send_file_right"
        android:gravity="right"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:gravity="right"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="right"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp">

                <TextView
                    android:id="@+id/send_file_time_r"
                    android:text="10-10 23:20:23"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp" />
                <TextView
                    android:id="@+id/send_file_user_r"
                    android:text="Jack"
                    android:paddingRight="5dp"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp" />

            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_margin="5dp"
                android:background="@drawable/rect_search_contact"
                android:padding="20dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_file_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

                <TextView
                    android:id="@+id/send_file_name_r"
                    android:layout_margin="5dp"
                    android:text="test_file_name_r"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <com.sjtuopennetwork.shareit.util.RoundImageView
            android:src="@drawable/ic_people"
            app:corner_radius="5dp"
            android:id="@+id/send_file_avatar_r"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </LinearLayout>

</LinearLayout>
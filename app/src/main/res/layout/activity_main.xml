<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/login_backgroud"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.shehuan.niv.NiceImageView
        app:border_color="@color/lightgray"
        app:border_width="1dp"
        android:layout_margin="50dp"
        android:src="@drawable/ic_people"
        android:id="@+id/register_avatar"
        app:is_circle="true"
        android:layout_width="100dp"
        android:layout_height="100dp" />


    <LinearLayout
        android:background="@drawable/rect_search_contact"
        android:orientation="horizontal"
        android:layout_width="200dp"
        android:layout_height="40dp">
        <TextView
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="昵称"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <EditText
            android:background="@null"
            android:hint="请输入昵称"
            android:imeOptions="actionDone"
            android:id="@+id/edt_name"
            android:textSize="16sp"
            android:singleLine="true"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <Button
        android:textColor="@color/white"
        android:id="@+id/shareItRegister"
        android:textSize="16sp"
        android:background="@drawable/back_bt_login"
        android:layout_margin="20dp"
        android:text="注       册"
        android:layout_width="200dp"
        android:layout_height="40dp" />

    <View
        android:layout_margin="20dp"
        android:background="@color/darkgray"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <Button
        android:textColor="@color/white"
        android:id="@+id/huaweiLogin"
        android:textSize="16sp"
        android:background="@drawable/back_bt_login"
        android:layout_margin="20dp"
        android:text="华为账号登录"
        android:layout_width="200dp"
        android:layout_height="40dp" />


    <Button
        android:textColor="@color/white"
        android:id="@+id/shareItLogin"
        android:textSize="16sp"
        android:background="@drawable/back_bt_login"
        android:layout_marginBottom="20dp"
        android:text="ShareIt账号登录"
        android:layout_width="200dp"
        android:layout_height="40dp" />


</LinearLayout>
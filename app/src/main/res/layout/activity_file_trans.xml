<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.v7.widget.Toolbar
        android:background="@color/lightgray"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/chat_name_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="文件统计"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:textColor="@color/black"
            android:id="@+id/get_num"
            android:padding="5dp"
            android:text="收到"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/save_log"
            android:layout_margin="5dp"
            android:layout_gravity="right"
            android:text="保存log到文件"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </android.support.v7.widget.Toolbar>


    <Button
        android:id="@+id/write_tree_csv"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:text="保存分发树" />

    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:padding="3dp"
            android:layout_margin="2dp"
            android:background="@color/lightgray"
            android:id="@+id/file_trans_size"
            android:gravity="center"
            android:text="文件大小："
            android:layout_weight="1"
            android:textColor="@color/black"
            android:layout_width="0dp"
            android:layout_height="40dp" />

        <TextView
            android:padding="3dp"
            android:layout_margin="2dp"
            android:background="@color/lightgray"
            android:id="@+id/file_trans_rtt"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:text="平均RTT："
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:padding="3dp"
            android:layout_margin="2dp"
            android:background="@color/lightgray"
            android:id="@+id/file_trans_rec_t"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="平均接收时间："
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp" />

        <TextView
            android:padding="3dp"
            android:layout_margin="2dp"
            android:background="@color/lightgray"
            android:id="@+id/file_trans_send_t"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:text="发送时间："
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp" />

    </LinearLayout>




    <View
        android:layout_marginTop="3dp"
        android:layout_marginBottom="5dp"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <ListView
        android:id="@+id/recordd_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>
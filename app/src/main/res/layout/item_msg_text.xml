<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/send_msg_left"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.sjtuopennetwork.shareit.util.RoundImageView
            android:src="@drawable/ic_default_avatar"
            app:corner_radius="20dp"
            android:id="@+id/msg_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp">

                <TextView
                    android:id="@+id/msg_name"
                    android:text="Jack"
                    android:paddingLeft="5dp"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/msg_time"
                    android:text="10-10 23:20:23"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textSize="13sp"
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/chat_words"
                android:layout_margin="5dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/black"
                android:background="@drawable/rect_search_contact"
                android:layout_width="wrap_content"
                android:text="Applications "
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/send_msg_right"
        android:gravity="right"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:gravity="right"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="right"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp">

                <TextView
                    android:id="@+id/msg_time_r"
                    android:text="10-10 23:20:23"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp" />
                <TextView
                    android:id="@+id/msg_name_r"
                    android:text="Jack"
                    android:paddingRight="5dp"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/chat_words_r"
                android:layout_margin="5dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/black"
                android:background="@drawable/rect_light_blue"
                android:layout_width="wrap_content"
                android:text="Applications "
                android:layout_height="wrap_content" />

        </LinearLayout>

        <com.sjtuopennetwork.shareit.util.RoundImageView
            android:src="@drawable/ic_default_avatar"
            app:corner_radius="20dp"
            android:id="@+id/msg_avatar_r"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </LinearLayout>

</LinearLayout>